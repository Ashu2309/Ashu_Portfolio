<script defer>
    var pbar = document.getElementsByClassName("bar_ani");
    window.addEventListener('scroll', () => {

        for (var i = 0; i < pbar.length; i++) {
            if (window.scrollY > 1000) {
                pbar[i].classList.add("animate_scroll");
            }
            else {
                pbar[i].classList.remove("animate_scroll");
            }
        }
    });

    const ripples = document.querySelectorAll(".ripple");

    ripples.forEach((ripple) => {
        ripple.addEventListener("click", (e) => {
            let x = e.pageX;
            let y = e.pageY;

            let overlay = document.createElement("span");
            overlay.classList.add("overlay_eff");
            overlay.style.top = y + "px";
            overlay.style.left = x + "px";

            ripple.appendChild(overlay);

            setTimeout(() => {
                overlay.remove();
            }, 300);

        });
    });


    const ripple_btns = document.querySelectorAll(".ripple_btn");

    ripple_btns.forEach((ripple_btn) => {
        ripple_btn.addEventListener("click", (e) => {
            let x = e.pageX - e.target.offsetLeft;
            let y = e.pageY - e.target.offsetTop;

            let overlay_btn = document.createElement("span");
            overlay_btn.classList.add("overlay_btn_eff");
            overlay_btn.style.top = y + "px";
            overlay_btn.style.left = x + "px";

            ripple_btn.appendChild(overlay_btn);

        });
    });

</script>

